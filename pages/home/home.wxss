.login {
  margin-top: 40rpx;
}
.login .list2 {
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 40rpx;
}
.login .list1 {
  padding: 20rpx;
  line-height: 2;
  display: flex;
  font-size: 30rpx;
  border-top: 1rpx solid #e8e8e8;
  display: flex;
}
.login .list1 text {
  margin-top: 10rpx;
  width: 120rpx;
}
.login .list1 input {
  margin-top: 8rpx;
  height: 60rpx;
  width: 400rpx;
}
.login .list1 button {
  width: 300rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  font-size: 40rpx;
}
.userinfo .userinfo-avatar {
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo .list {
  margin-top: 20rpx;
  text-align: center;
  border: 1rpx solid #e8e8e8;
  width: 100%;
  height: 100rpx;
  font-size: 40rpx;
}
.userinfo .list .list1 {
  margin-top: 40rpx;
  background: #fff;
  height: 82rpx;
}
